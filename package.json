{
  "name": "pig-translator",
  "version": "1.0.0",
  "description": "A simple program to perform basic English to a foreign language translation.",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "format": "biome format --write src",
    "lint:fix": "biome check --apply-unsafe ./src",
    "lint:ci": "biome ci src",
    "lint:tsc": "tsc --extendedDiagnostics",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest -w",
    "test:ui": "vitest --ui --api 9527"
  },
  "author": {
    "name": "Gabb-c",
    "url": "https://github.com/Gabb-c"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.3.3",
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/node": "^20.9.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
